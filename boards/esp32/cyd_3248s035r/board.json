{
  "id": "cyd",
  "name": "CYD ESP32-3248S035R",
  "description": "Cheap Yellow Display - 3.5 inch TFT with resistive touch, ESP32 powered",
  "platform": "esp32",
  "manufacturer": "Sunton",
  "target": "esp32",
  "mcu": "ESP32-WROOM-32",
  "flash": "4MB",
  "ram": "520KB",
  "led_mode": "single",
  "led_active_low": true,
  "display": "320x480 ST7796",
  "capabilities": [
    "wifi",
    "bluetooth",
    "twai",
    "gpio",
    "tft",
    "touch",
    "sd_card",
    "uart",
    "spi",
    "i2c"
  ],
  "pins": {
    "tft_mosi": 13,
    "tft_miso": 12,
    "tft_sclk": 14,
    "tft_cs": 15,
    "tft_dc": 2,
    "tft_rst": -1,
    "tft_bl": 27,
    "touch_cs": 33,
    "touch_irq": -1,
    "sd_mosi": 23,
    "sd_miso": 19,
    "sd_sclk": 18,
    "sd_cs": 5,
    "i2c_sda": 21,
    "i2c_scl": 22,
    "uart_tx": 1,
    "uart_rx": 3,
    "can_tx": 26,
    "can_rx": 25,
    "can_stby": -1,
    "can_en": -1,
    "led": 16,
    "button": 0
  },
  "pin_definitions": {
    "tft_mosi": {
      "description": "TFT SPI Master Out Slave In",
      "alternatives": [13, 23],
      "type": "output"
    },
    "tft_miso": {
      "description": "TFT SPI Master In Slave Out",
      "alternatives": [12, 19],
      "type": "input"
    },
    "tft_sclk": {
      "description": "TFT SPI Clock",
      "alternatives": [14, 18],
      "type": "output"
    },
    "tft_cs": {
      "description": "TFT Chip Select",
      "alternatives": [15, 5, 4],
      "type": "output"
    },
    "tft_dc": {
      "description": "TFT Data/Command",
      "alternatives": [2, 4, 16],
      "type": "output"
    },
    "tft_bl": {
      "description": "TFT Backlight",
      "alternatives": [21, 27],
      "type": "output"
    },
    "touch_cs": {
      "description": "Touch Controller Chip Select",
      "alternatives": [33, 5, 15],
      "type": "output"
    },
    "touch_irq": {
      "description": "Touch Controller Interrupt",
      "alternatives": [-1, 36, 39],
      "type": "input"
    },
    "sd_mosi": {
      "description": "SD SPI MOSI",
      "alternatives": [23, 13],
      "type": "output"
    },
    "sd_miso": {
      "description": "SD SPI MISO",
      "alternatives": [19, 12],
      "type": "input"
    },
    "sd_sclk": {
      "description": "SD SPI Clock",
      "alternatives": [18, 14],
      "type": "output"
    },
    "sd_cs": {
      "description": "SD Card Chip Select",
      "alternatives": [5, 4, 15, 33],
      "type": "output"
    },
    "i2c_sda": {
      "description": "I2C SDA",
      "alternatives": [21, 33, 25],
      "type": "bidirectional"
    },
    "i2c_scl": {
      "description": "I2C SCL",
      "alternatives": [22, 32, 26],
      "type": "output"
    },
    "uart_tx": {
      "description": "UART TX",
      "alternatives": [1, 17, 25],
      "type": "output"
    },
    "uart_rx": {
      "description": "UART RX",
      "alternatives": [3, 16, 26],
      "type": "input"
    },
    "can_tx": {
      "description": "TWAI/CAN TX (external transceiver TXD)",
      "alternatives": [26, 25, 4, 17],
      "type": "output"
    },
    "can_rx": {
      "description": "TWAI/CAN RX (external transceiver RXD)",
      "alternatives": [25, 26, 34, 35, 39],
      "type": "input"
    },
    "can_stby": {
      "description": "CAN transceiver standby control (optional)",
      "alternatives": [-1, 4, 16, 17, 25, 26, 27, 32, 33],
      "type": "output"
    },
    "can_en": {
      "description": "CAN transceiver enable control (optional)",
      "alternatives": [-1, 4, 16, 17, 25, 26, 27, 32, 33],
      "type": "output"
    },
    "led": {
      "description": "Onboard LED",
      "alternatives": [17, 4, 2],
      "type": "output"
    },
    "button": {
      "description": "Boot/User Button",
      "alternatives": [0, 35, 39],
      "type": "input"
    }
  },
  "sdkconfig": [
    "# ESP32 Board Specific",
    "CONFIG_ESP32_DEFAULT_CPU_FREQ_240=y",
    "CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y",
    "CONFIG_PARTITION_TABLE_CUSTOM=y",
    "CONFIG_PARTITION_TABLE_CUSTOM_FILENAME=\"partitions.csv\"",
    "",
    "# Console configuration",
    "CONFIG_ESP_CONSOLE_UART_DEFAULT=y",
    "CONFIG_ESP_CONSOLE_UART_NUM=0",
    "CONFIG_ESP_CONSOLE_UART_BAUDRATE=115200",
    "",
    "# SPI Flash",
    "CONFIG_ESPTOOLPY_FLASHMODE_DIO=y",
    "CONFIG_ESPTOOLPY_FLASHFREQ_80M=y"
  ],
  "defaults": {
    "modules": [
      "gpio",
      "uart",
      "spi",
      "i2c",
      "fs_spiffs",
      "fs_sd",
      "tft",
      "shell_full"
    ],
    "applets": [
      "tft_hello",
      "system_info",
      "sd_probe"
    ],
    "clock": {
      "freq_hz": 240000000
    }
  },
  "notes": "Popular development board with integrated TFT display. Commonly known as 'Cheap Yellow Display' or CYD."
}

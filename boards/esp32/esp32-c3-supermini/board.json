{
  "id": "esp32-c3-supermini",
  "name": "ESP32-C3 SuperMini (Generic)",
  "description": "Small ESP32-C3 board (RISC-V). Pinout varies by vendor; this template provides common-safe assignments.",
  "platform": "esp32",
  "mcu": "ESP32-C3",
  "flash": "4MB (typical)",
  "ram": "400KB (typical)",
  "capabilities": [
    "wifi",
    "uart",
    "spi",
    "i2c",
    "gpio",
    "adc",
    "pwm",
    "twai"
  ],
  "pins": {
    "uart_tx": 21,
    "uart_rx": 20,
    "i2c_sda": 4,
    "i2c_scl": 3,
    "can_tx": 5,
    "can_rx": 2,
    "can_stby": -1,
    "can_en": -1,
    "spi_mosi": -1,
    "spi_miso": -1,
    "spi_sclk": -1,
    "spi_cs": -1,
    "led": -1,
    "button": 0
  },
  "pin_definitions": {
    "uart_tx": {
      "description": "UART TX (often on 21 for C3 boards)",
      "alternatives": [
        21,
        4,
        5
      ],
      "type": "output"
    },
    "uart_rx": {
      "description": "UART RX (often on 20 for C3 boards)",
      "alternatives": [
        20,
        4,
        5
      ],
      "type": "input"
    },
    "i2c_sda": {
      "description": "I2C SDA (example)",
      "alternatives": [
        4,
        3,
        5,
        6,
        7,
        8,
        10
      ],
      "type": "bidirectional"
    },
    "i2c_scl": {
      "description": "I2C SCL (example)",
      "alternatives": [
        3,
        4,
        9,
        5,
        6,
        7,
        10
      ],
      "type": "output"
    },
    "can_tx": {
      "description": "TWAI/CAN TX (connect to external transceiver TXD)",
      "alternatives": [
        5,
        4,
        3,
        2,
        1
      ],
      "type": "output"
    },
    "can_rx": {
      "description": "TWAI/CAN RX (connect to external transceiver RXD)",
      "alternatives": [
        2,
        3,
        4,
        5,
        1,
        0
      ],
      "type": "input"
    },
    "can_stby": {
      "description": "CAN transceiver standby control (optional)",
      "alternatives": [
        -1,
        0,
        1,
        2,
        3,
        4,
        5
      ],
      "type": "output"
    },
    "can_en": {
      "description": "CAN transceiver enable control (optional)",
      "alternatives": [
        -1,
        0,
        1,
        2,
        3,
        4,
        5
      ],
      "type": "output"
    },
    "led": {
      "description": "Onboard LED (varies a lot on SuperMini clones)",
      "alternatives": [
        8,
        2,
        3,
        10
      ],
      "type": "output"
    },
    "button": {
      "description": "User/boot button (varies)",
      "alternatives": [
        9,
        0
      ],
      "type": "input"
    }
  },
  "sdkconfig": [
    "# ESP32-C3 defaults (verify flash size and CPU freq for your build target)",
    "CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y",
    "CONFIG_ESP_CONSOLE_UART_DEFAULT=y",
    "CONFIG_ESP_CONSOLE_UART_BAUDRATE=115200"
  ],
  "defaults": {
    "modules": [
      "gpio",
      "uart",
      "i2c",
      "fs_spiffs",
      "display_ssd1306",
      "shell_full"
    ],
    "driver_config": {
      "display_ssd1306": {
        "address": "0x3C",
        "width": 128,
        "height": 64
      }
    },
    "clock": {
      "freq_hz": 160000000
    }
  },
  "notes": "ESP32-C3 boards are wildly inconsistent across sellers. Confirm UART/LED/button pins with your board\u2019s silkscreen or schematic."
}

  "platform": "esp32",
  "manufacturer": "Espressif",
  "target": "esp32c6",
  "mcu": "ESP32-C6",
  "flash": "4MB (typical)",
  "ram": "512KB (typical)",
  "capabilities": [
    "wifi",
    "bluetooth",
    "uart",
    "spi",
    "i2c",
    "gpio",
    "adc",
    "pwm",
    "remote_node",
    "mcp23017",
    "hp4067"

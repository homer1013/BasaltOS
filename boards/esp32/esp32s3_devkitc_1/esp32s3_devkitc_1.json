{
  "name": "ESP32-S3-DevKitC-1 (Template)",
  "description": "ESP32-S3 DevKitC-style template. Assign pins based on your specific module/board; S3 has flexible IO routing.",
  "platform": "esp32",
  "mcu": "ESP32-S3",
  "flash": "8MB (typical)",
  "ram": "512KB + optional PSRAM (varies)",
  "capabilities": [
    "wifi",
    "bluetooth",
    "uart",
    "spi",
    "i2c",
    "gpio",
    "adc",
    "pwm",
    "usb_otg"
  ],
  "pins": {
    "uart_tx": 43,
    "uart_rx": 44,
    "i2c_sda": 8,
    "i2c_scl": 9,
    "spi_mosi": 11,
    "spi_miso": 13,
    "spi_sclk": 12,
    "spi_cs": 10,
    "led": -1,
    "button": 0
  },
  "pin_definitions": {
    "uart_tx": {
      "description": "UART TX (example; many S3 boards use 43/44)",
      "alternatives": [
        43,
        17,
        18
      ],
      "type": "output"
    },
    "uart_rx": {
      "description": "UART RX (example; many S3 boards use 44/43)",
      "alternatives": [
        44,
        17,
        18
      ],
      "type": "input"
    },
    "i2c_sda": {
      "description": "I2C SDA (example)",
      "alternatives": [
        8,
        1,
        2,
        3,
        4,
        5,
        6,
        7,
        10,
        11
      ],
      "type": "bidirectional"
    },
    "i2c_scl": {
      "description": "I2C SCL (example)",
      "alternatives": [
        9,
        1,
        2,
        3,
        4,
        5,
        6,
        7,
        10,
        12
      ],
      "type": "output"
    },
    "led": {
      "description": "Onboard LED (often present but pin varies)",
      "alternatives": [
        48,
        47,
        21,
        38,
        0
      ],
      "type": "output"
    },
    "button": {
      "description": "Boot button (often GPIO0)",
      "alternatives": [
        0
      ],
      "type": "input"
    }
  },
  "sdkconfig": [
    "# ESP32-S3 defaults (board/target must be set by your ESP-IDF project)",
    "CONFIG_ESP_CONSOLE_UART_DEFAULT=y",
    "CONFIG_ESP_CONSOLE_UART_BAUDRATE=115200"
  ],
  "notes": "S3 pin numbers here are a starting point. Confirm your exact board\u2019s UART pins (USB-serial vs native USB) and any onboard LED GPIO."
}

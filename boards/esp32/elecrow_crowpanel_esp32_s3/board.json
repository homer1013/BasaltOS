{
  "id": "elecrow_crowpanel_esp32_s3",
  "name": "Elecrow CrowPanel ESP32-S3",
  "description": "Metadata-first baseline profile for Elecrow CrowPanel ESP32-S3 touchscreen display variants (pinout/controller must be verified per exact model).",
  "platform": "esp32",
  "target": "esp32s3",
  "manufacturer": "Elecrow",
  "architecture": "Xtensa",
  "family": "ESP32-S3",
  "mcu": "ESP32-S3",
  "flash": "8MB (typical)",
  "ram": "512KB + PSRAM (variant-dependent)",
  "display": "TFT touch display (variant-dependent controller/resolution)",
  "capabilities": [
    "wifi",
    "bluetooth",
    "gpio",
    "tft",
    "touch",
    "uart",
    "spi",
    "i2c",
    "pwm",
    "adc",
    "remote_node",
    "mcp23017",
    "hp4067",
    "psram"
  ],
  "pins": {
    "uart_tx": 43,
    "uart_rx": 44,
    "i2c_sda": 8,
    "i2c_scl": 9,
    "tft_mosi": 11,
    "tft_miso": 13,
    "tft_sclk": 12,
    "tft_cs": 10,
    "tft_dc": 14,
    "tft_rst": 15,
    "tft_bl": 38,
    "touch_cs": 16,
    "touch_irq": 18,
    "led": -1,
    "button": 0
  },
  "pin_definitions": {
    "uart_tx": { "description": "UART TX baseline pin (common S3 USB-serial mapping)", "alternatives": [43, 17, 18], "type": "output" },
    "uart_rx": { "description": "UART RX baseline pin (common S3 USB-serial mapping)", "alternatives": [44, 17, 18], "type": "input" },
    "i2c_sda": { "description": "I2C SDA baseline pin", "alternatives": [8, 1, 2, 3, 4, 5, 6, 7, 10], "type": "bidirectional" },
    "i2c_scl": { "description": "I2C SCL baseline pin", "alternatives": [9, 1, 2, 3, 4, 5, 6, 7, 11], "type": "output" },
    "tft_mosi": { "description": "TFT SPI MOSI baseline pin", "alternatives": [11, 13, 12, 10], "type": "output" },
    "tft_miso": { "description": "TFT SPI MISO baseline pin", "alternatives": [13, 11, 12, 10], "type": "input" },
    "tft_sclk": { "description": "TFT SPI clock baseline pin", "alternatives": [12, 11, 13, 10], "type": "output" },
    "tft_cs": { "description": "TFT chip select baseline pin", "alternatives": [10, 9, 8, 7], "type": "output" },
    "tft_dc": { "description": "TFT data/command baseline pin", "alternatives": [14, 21, 47], "type": "output" },
    "tft_rst": { "description": "TFT reset baseline pin", "alternatives": [15, 16, -1], "type": "output" },
    "tft_bl": { "description": "TFT backlight baseline pin", "alternatives": [38, 48, 47], "type": "output" },
    "touch_cs": { "description": "Touch controller chip-select baseline pin", "alternatives": [16, 10, 9], "type": "output" },
    "touch_irq": { "description": "Touch controller interrupt baseline pin", "alternatives": [18, 17, -1], "type": "input" },
    "led": { "description": "Onboard LED (optional, board-dependent)", "alternatives": [-1, 48, 47, 21], "type": "output" },
    "button": { "description": "Boot/User button baseline pin", "alternatives": [0], "type": "input" }
  },
  "defaults": {
    "modules": ["gpio", "uart", "spi", "i2c", "tft", "shell_full"],
    "clock": { "freq_hz": 240000000 }
  },
  "notes": "Foundation baseline profile for S3 CrowPanel family. Validate exact display controller, touch controller wiring, and backlight pin mapping during bench bring-up."
}

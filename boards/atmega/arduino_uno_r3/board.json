{
  "id": "arduino_uno_r3",
  "name": "Arduino Uno R3",
  "description": "Classic Arduino Uno R3 (ATmega328P). Pin labels follow Arduino numbering.",
  "platform": "atmega",
  "manufacturer": "Arduino",
  "target_profile": "atmega328p",
  "mcu": "ATmega328P",
  "flash": "32KB",
  "ram": "2KB",
  "capabilities": [
    "uart",
    "spi",
    "i2c",
    "gpio",
    "adc",
    "pwm",
    "timer"
  ],
  "pins": {
    "uart_tx": "D1",
    "uart_rx": "D0",
    "i2c_sda": "A4",
    "i2c_scl": "A5",
    "spi_mosi": "D11",
    "spi_miso": "D12",
    "spi_sclk": "D13",
    "spi_cs": "D10",
    "led": "D13",
    "button": -1
  },
  "pin_definitions": {
    "i2c_sda": {
      "description": "I2C SDA",
      "alternatives": [
        "A4"
      ],
      "type": "bidirectional"
    },
    "i2c_scl": {
      "description": "I2C SCL",
      "alternatives": [
        "A5"
      ],
      "type": "output"
    },
    "spi_cs": {
      "description": "SPI SS",
      "alternatives": [
        "D10"
      ],
      "type": "output"
    },
    "led": {
      "description": "Onboard LED",
      "alternatives": [
        "D13"
      ],
      "type": "output"
    }
  },
  "sdkconfig": [
    "# AVR build hints",
    "F_CPU=16000000UL",
    "MCU=atmega328p"
  ],
  "defaults": {
    "modules": [
      "gpio",
      "uart",
      "i2c",
      "spi",
      "adc",
      "timer",
      "pwm"
    ],
    "clock": {
      "freq_hz": 16000000
    }
  },
  "notes": "For raw AVR (non-Arduino core), translate Arduino pin labels to ports (e.g., D13=PB5).",
  "architecture": "AVR 8-bit",
  "family": "ATmega328"
}

{
  "id": "rtc",
  "name": "RTC (DS3231/PCF8523)",
  "description": "Real-time clock support over I2C",
  "platforms": [
    "esp32",
    "stm32",
    "rp2040",
    "avr",
    "pic16",
    "atsam",
    "renesas_ra",
    "renesas_rx",
    "linux-sbc"
  ],
  "provides": [
    "rtc"
  ],
  "depends": [
    "i2c"
  ],
  "conflicts": [],
  "defines": [
    "BASALT_ENABLE_RTC"
  ],
  "pins": [
    "i2c_sda",
    "i2c_scl"
  ],
  "configuration_options": [
    {
      "id": "driver",
      "name": "RTC Driver",

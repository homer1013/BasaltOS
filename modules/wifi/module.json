{
  "id": "wifi",
  "name": "Wi-Fi (Station)",
  "description": "Wi-Fi station networking and shell diagnostics (status/scan/connect).",
  "platforms": ["esp32"],
  "provides": ["wifi", "net"],
  "depends": ["uart"],
  "conflicts": [],
  "defines": ["BASALT_ENABLE_WIFI"],
  "sdkconfig": [
    "CONFIG_ESP_WIFI_ENABLED=y",
    "CONFIG_ESP_WIFI_IRAM_OPT=n",
    "CONFIG_ESP_WIFI_RX_IRAM_OPT=n"
  ],
  "default_enabled": false,
  "notes": [
    "Requires ESP-IDF Wi-Fi support in sdkconfig.",
    "Shell command: wifi [status|scan|connect|reconnect|disconnect]"
  ]
}

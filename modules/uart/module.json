{
  "id": "uart",
  "name": "UART",
  "description": "Universal Asynchronous Receiver-Transmitter for serial communication for console, logging,      debugging, and external devices",
  "platforms": [
    "esp32",
    "stm32",
    "rp2040",
    "avr",
    "pic",
    "pic16",
    "atsam",
    "renesas_ra",
    "renesas_rx",
    "linux-sbc"
  ],
  "provides": [
    "uart"
  ],
  "depends": [],
  "conflicts": [],
  "constraints": {},
  "defines": [
    "BASALT_ENABLE_UART"
  ],
  "runtime": {
    "max_ports": 3,
    "default_port": 0,
    "baudrate": 115200
  },
  "notes": [
    "Typically used for system console and debug logging",
    "May also be used for external serial peripherals (GPS, modems, sensors)",
    "Port availability and pin assignments are board-dependent"
  ],
  "default_enabled": true,
  "pins": [
    "uart_tx",
    "uart_rx"
  ],
  "pin_requirements": {
    "uart_tx": {
      "required": false,
      "description": "UART Transmit"
    },
    "uart_rx": {
      "required": false,
      "description": "UART Receive"
    }
  },
  "configuration_options": [
    {
      "id": "mode",
      "name": "UART Mode",
      "type": "select",
      "options": [
        "tx_rx",
        "tx",
        "rx"
      ],
      "default": "tx_rx"
    },
    {
      "id": "uart_num",
      "name": "UART Port Number",
      "type": "select",
      "options": [
        0,
        1,
        2,
        3
      ],
      "default": 0
    },
    {
      "id": "uart_baudrate",
      "name": "Baud Rate",
      "type": "select",
      "options": [
        9600,
        19200,
        38400,
        57600,
        115200,
        230400,
        460800
      ],
      "default": 115200
    },
    {
      "id": "uart_data_bits",
      "name": "Data Bits",
      "type": "select",
      "options": [
        5,
        6,
        7,
        8
      ],
      "default": 8
    },
    {
      "id": "uart_stop_bits",
      "name": "Stop Bits",
      "type": "select",
      "options": [
        1,
        2
      ],
      "default": 1
    },
    {
      "id": "uart_parity",
      "name": "Parity",
      "type": "select",
      "options": [
        "none",
        "even",
        "odd"
      ],
      "default": "none"
    },
    {
      "id": "uart_buffer_size",
      "name": "Buffer Size (bytes)",
      "type": "number",
      "default": 256,
      "min": 64,
      "max": 2048
    }
  ],
  "sdkconfig": [
    "# UART Module",
    "CONFIG_ESP_CONSOLE_UART_DEFAULT=y",
    "CONFIG_ESP_CONSOLE_UART_BAUDRATE=115200"
  ],
  "source_files": [
    "basalt_hal/hal_uart.c"
  ],
  "header_files": [
    "basalt_hal/hal_uart.h"
  ]
}

{
  "id": "mcp23017",
  "name": "MCP23017 I/O Expander",
  "description": "16-bit I2C GPIO expander (2x8-bit ports)",
  "platforms": ["esp32", "stm32", "rp2040", "avr", "pic16"],
  "provides": ["gpio_ext", "gpio"],
  "depends": ["i2c"],
  "conflicts": [],
  "defines": ["BASALT_ENABLE_MCP23017"],
  "pins": ["i2c_sda", "i2c_scl", "mcp23017_inta", "mcp23017_intb"],
  "configuration_options": [
    {
      "id": "address",
      "name": "I2C Address",
      "type": "select",
      "options": ["0x20", "0x21", "0x22", "0x23", "0x24", "0x25", "0x26", "0x27"],
      "default": "0x20"
    },
    {
      "id": "default_direction",
      "name": "Default Pin Direction",
      "type": "select",
      "options": ["input", "output"],
      "default": "input"
    }
  ]
}
